{
  "version": "1.0.0-beta.64",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "sort": [
    "@nuz/shared",
    "@nuz/utils",
    "@nuz/core",
    "@nuz/cli",
    "@nuz/registry"
  ],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.com"
    },
    "version": {
      "allowBranch": [
        "master",
        "next"
      ],
      "message": "chore(release): %s",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
      ]
    }
  }
}
